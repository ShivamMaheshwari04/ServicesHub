<body>
  <section class="container">
    <header>Add Listing</header>
    <form action="/update-service" method="post" class="form">

      <div class="input-box">
        <label for="serviceId">Service ID</label>
        <input type="text" id="sid" name="s_id" value="<%=item.s_id%>" disabled>
      </div>
      <div class="input-box">
        <label for="serviceId">Image Link</label>
        <input type="text" id="image" name="ImageLink" value="<%=item.ImageLink%>" required>
        <span class="link"><a href="https://postimages.org/" target="_blank">Use Postimages to Generate Link</a></span>
      </div>

      <div class="input-box">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%=item.title%>" maxlength="80" required
          pattern="^[A-Za-z]+(?:\s[A-Za-z]+)*$">
        <span style="color: black;display: flex;flex-direction: column;justify-self: end;">80 Character only</span>
      </div>

      <div class="input-box address">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3" name="description" maxlength="500"
          pattern="^[A-Za-z]+(?:\s[A-Za-z]+)*$" required><%= item.description %></textarea>
      </div>


      <div class="input-box">
        <label for="price">Price:</label>
        <input type="number" id="price" value="<%=item.price%>" name="price" max="5999" min="1" required>
      </div>
      <br>
      <label for="category">Category:</label>
      <div class="column">
        <div class="select-box">
          <select id="category" name="category" required>
            <option hidden>Select Category</option>
            <option value="Repair" <%=item.category==='Repair' ? 'selected' : '' %>>Repair</option>
            <option value="Installation" <%=item.category==='Installation' ? 'selected' : '' %>>Installation</option>
            <option value="Assemble" <%=item.category==='Assemble' ? 'selected' : '' %>>Assemble</option>
            <option value="Uninstallation" <%=item.category==='Uninstallation' ? 'selected' : '' %>>Uninstallation
            </option>
            <option value="Maintenance" <%=item.category==='Maintenance' ? 'selected' : '' %>>Maintenance</option>
            <option value="Cleaning" <%=item.category==='Cleaning' ? 'selected' : '' %>>Cleaning</option>
            <option value="Others" <%=item.category==='Others' ? 'selected' : '' %>>Others</option>
          </select>
        </div>
      </div>




      </div>
      <div class="container1" style="display: flex;justify-content: center;align-items: center;margin: 20px;">
        <button type="submit" class="btn btn-success" id="update-btn" data-toggle="modal"
          data-target=".bd-example-modal-lg">Update</button>
        <button type="button" class="btn btn-danger" onclick="window.history.back()">Cancel</button>
      </div>
    </form>
  </section>
</body>
<script>
document.getElementById('update-btn').addEventListener('click', function (event) {
    event.preventDefault(); // Prevent default form submission behavior

    // Get the current values of the form fields
    const imageLink = document.getElementById("image").value;
    const title = document.getElementById("title").value;
    const description = document.getElementById("description").value;
    const price = document.getElementById("price").value;
    const category = document.getElementById("category").value;

    // Check if all required fields are filled and validate price
    if (imageLink.trim() === '' || title.trim() === '' || description.trim() === '' || price.trim() === '' || category.trim() === '') {
        // Display an error message if any required field is empty
        swal("Error!", "Please fill in all required fields.", "error");
        return; // Exit function if any required field is empty
    } else if (isNaN(parseFloat(price)) || parseFloat(price) < 1) {
        // Display an error message if price is not a number or less than 1
        swal("Error!", "Price must be a number and at least 1.", "error");
        return; // Exit function if price is invalid
    }

    // Check if any of the form fields have been modified
    const isModified = imageLink !== '<%=item.ImageLink%>' ||
      title !== '<%=item.title%>' ||
      description !== '<%=item.description%>' ||
      price !== '<%=item.price%>' ||
      category !== '<%=item.category%>';

    // If any field has been modified, display the confirmation dialog
    if (isModified) {
      swal({
        title: "Are you sure?",
        text: "You are about to update the service!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      }).then((willUpdate) => {
        if (willUpdate) {
          // If the user confirms, send the form data using AJAX
          const formData = {
            imageLink: imageLink,
            title: title,
            description: description,
            price: price,
            category: category
          };

          // Send the form data to the server using AJAX
          $.ajax({
            type: "POST",
            url: "/update-service",
            data: formData,
            success: function (response) {
              // Handle the response from the server
              swal("Service updated successfully!", {
                icon: "success",
              });
              setTimeout(function () {
                window.history.back();
              }, 2000);
              // Optionally, redirect to another page after successful update
              // window.location.href = "/success-page";
            },
            error: function (error) {
              // Handle the error
              swal("Error updating service!", {
                icon: "error",
              });
              setTimeout(function () {
                window.history.back();
              }, 2000);
            }
          });
        } else {
          // If the user cancels, do nothing
        }
      });
    } else {
      // If no fields have been modified, do nothing
    }
});

  window.addEventListener('load', function () {
    const descriptionTextarea = document.getElementById("description");
    const originalDescription = descriptionTextarea.value;
    const sanitizedDescription = originalDescription.replace(/['"]/g, ''); // Remove single and double quotes
    if (originalDescription !== sanitizedDescription) {
      descriptionTextarea.value = sanitizedDescription; // Update the textarea with sanitized value
    }
  });


</script>
