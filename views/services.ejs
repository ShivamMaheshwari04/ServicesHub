<style>
    @media (max-width: 992px) {
        /* Define styles for screens with width less than 991 pixels */
        .rounded-circle {
            margin-right: 5px;
            width: 30px
        }
    }

    .preview {
        /* display: none; */
        padding: 2rem;
        text-align: center;
        background: #fff;
        position: relative;
        margin: 2rem;
    }

    .preview.active {
        display: inline-block;
    }

    .preview .fa-times {
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        cursor: pointer;
        color: #444;
        font-size: 4rem;
    }

    .preview .fa-times:hover {
        transform: rotate(90deg);
    }

    .preview h3 {
        color: #444;
        padding: .5rem 0;
        font-size: 2.5rem;
    }

    .preview .stars {
        padding: 1rem 0;
        font-size: 1.7rem;
    }

    .preview .stars i {
        color: #27ae60;
    }

    .preview .stars span {
        color: #999;
    }

    .preview p {
        line-height: 1.5;
        padding: 1rem 0;
        font-size: 1.6rem;
        color: #777;
    }

    .preview .price {
        padding: 1rem 0;
        font-size: 2.5rem;
        color: #27ae60;
    }

    .preview .buttons {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .products-preview .preview .buttons a {
        flex: 1 1 16rem;
        padding: 1rem;
        font-size: 1.8rem;
        color: #444;
        border: .1rem solid #444;
    }

    .products-preview .preview .buttons a.cart {
        background: #444;
        color: #fff;
    }

    .products-preview .preview .buttons a.cart:hover {
        background: #111;
    }

    .products-preview .preview .buttons a.buy:hover {
        background: #444;
        color: #fff;
    }
</style>

<body>
    <%- include('./Other Files/navbar.ejs') %>

        <div class="products">
            <div class="container">
                <h1 class="lg-title">View All Services</h1>
                <!-- <p class="text-light" >Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur quos sit
                    consectetur, ipsa voluptatem vitae necessitatibus dicta veniam, optio, possimus assumenda
                    laudantium. Temporibus, quis cum.</p> -->

                <div class="product-items">
                    <!-- single product -->
                    <% for (let i=0; i < items.length; i++) { %>
                        <% if (items[i].s_status=="Active" ) { %>
                            <div class="product">
                                <div class="product-content">
                                    <div class="product-img">
                                        <img src="<%= items[i].ImageLink %>" alt="product image">
                                    </div>
                                    <div class="product-btns">
                                        <!-- <button type="button" class="btn-cart"> add to cart
                                    <span><i class="fas fa-plus"></i></span>
                                    </button> -->

                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn-buy" id="btn<%= i %>"
                                            onclick="openModal(<%= i %>)">
                                            View Details
                                        </button>
                                    </div>
                                </div>

                                <div class="product-info">
                                    <div class="product-info-top">
                                        <h2 class="sm-title" value="<%= items[i].category %>">
                                            <%= items[i].category %>
                                        </h2>
                                        <!-- <div class="rating">
                                            <span><i class="fas fa-star"></i></span>
                                            <span><i class="fas fa-star"></i></span>
                                            <span><i class="fas fa-star"></i></span>
                                            <span><i class="fas fa-star"></i></span>
                                            <span><i class="far fa-star"></i></span>
                                        </div> -->
                                    </div>
                                    <a href="#" class="product-name" value="<%= items[i].title %>">
                                        <%= items[i].title %>
                                    </a>
                                    <!-- <p class="product-price">$ 150.00</p> -->
                                    <p class="product-price" value="<%= items[i].price %>">â‚¹ <%= items[i].price %>
                                    </p>
                                </div>

                                <div class="off-info">
                                    <h2 class="sm-title">25% off</h2>
                                </div>
                            </div>
                            <% } else { %>
                                <% } %>
                                    <!-- end of single product -->
                                    <% } %>
                </div>
            </div>
        </div>




        <%- include('./Other Files/Footer.ejs') %>
</body>
<script>
    function openModal(index) {
        const url = `/modal?index=${index}`;
        window.location.href = url;
    }

</script>


